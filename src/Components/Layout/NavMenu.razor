        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Work">
            Ván công nghiệp
        </MudNavLink>

        <MudText Typo="Typo.caption">
            Quản lý hàng hóa
        </MudText>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Work">
            Điều chuyển theo bin
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Work">
            Kiểm kê vật tư
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Work">
            Xác nhận thành phẩm lỗi
        </MudNavLink>
    </MudNavMenu>
</MudContainer>

