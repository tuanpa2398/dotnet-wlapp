        </MudNavLink>


        <MudText Typo="Typo.caption">
            Quản lý người dùng
        </MudText>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Group">
            Danh sách người dùng
        </MudNavLink>

        <MudText Typo="Typo.caption">
            Quản lý sấy gỗ
        </MudText>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Sort">
            Xếp sấy
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Create">
            Tạo kế hoạch sấy
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Factory">
