    </MudContainer>

    <MudNavMenu Dense="true" >
        <MudText Typo="Typo.caption">
            DASHBOARD
        </MudText>
        <MudNavLink Match="NavLinkMatch.All" Href="/" Icon="@Icons.Material.Filled.Description" Class="active">
            Dashboard
        </MudNavLink>

        <MudText Typo="Typo.caption">
            USER
        </MudText>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Gavel">
            Quản lý người dùng
        </MudNavLink>
    </MudNavMenu>
</MudContainer>

@code {
    public void navigate(){
        Nav.NavigateTo("/");
    }
}