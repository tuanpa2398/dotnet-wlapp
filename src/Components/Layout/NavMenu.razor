            Chế biến gỗ
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Kitchen">
            Tủ bếp
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.Flood">
            Ván công nghiệp
        </MudNavLink>
        

        <MudText Typo="Typo.caption">
            Kiểm định chất lượng
        </MudText>
