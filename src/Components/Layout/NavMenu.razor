<MudContainer Class="sidebar-root" DisableGutters>
    <MudContainer Class="sidebar-header d-flex flex-column align-center justify-center mb-3 cursor-pointer" DisableGutters>
        <MudImage Src="images/WLorigin.svg" Width="84" @onclick="navigate" />
    </MudContainer>

    <MudNavMenu Dense="true" >
        <MudText Typo="Typo.caption">
            Quản trị hệ thống
        </MudText>
