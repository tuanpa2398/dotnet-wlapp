<Fieldset LegendTitle="quản lý sấy gỗ">
    <MudAlert Severity="Severity.Normal" ContentAlignment="HorizontalAlignment.Start" Elevation="3" Class="mb-3 cursor-pointer" 
        OnClick="@(() => navigate("/drying/stack"))"
